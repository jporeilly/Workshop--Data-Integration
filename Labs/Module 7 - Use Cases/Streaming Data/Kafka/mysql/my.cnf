# MySQL Configuration for Kafka Workshop
# Optimized for streaming data ingestion

[mysqld]
# InnoDB Settings for better write performance
innodb_buffer_pool_size = 2G
innodb_log_file_size = 512M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Connection Settings
max_connections = 200
wait_timeout = 28800
interactive_timeout = 28800

# Performance
max_allowed_packet = 256M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
join_buffer_size = 4M

# Query Cache (removed in MySQL 8.0+)
# query_cache_type and query_cache_size are no longer supported

# Logging
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2

# Binary Logging
binlog_format = ROW
binlog_expire_logs_seconds = 604800  # 7 days

# Character Set
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Timezone
default_time_zone = '+00:00'

# Security
local_infile = 0
